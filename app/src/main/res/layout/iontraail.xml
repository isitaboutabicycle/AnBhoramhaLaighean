<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/IontraailCeeadLiine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/TeidilNahIontraala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="24sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/RannCainteNahIontraala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/TeidilNahIontraala"
            android:textSize="16sp"
            android:textColor="#888888" />

    </RelativeLayout>

    <TextView
        android:id="@+id/SainmhiiniuuNahIontraala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IontraailCeeadLiine"
        android:textSize="16sp"
        android:textColor="#000000" />

</RelativeLayout>